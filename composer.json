{
    "name": "valcano/php-package-builder",
    "description": "A php package builder.",
    "keywords": ["composer", "package", "php", "builder"],
    "authors": [
        {
            "name": "Yi Wang",
            "email": "wangyiicloud@icloud.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Valcano\\Builder\\": "src"
        }
    },
    "require": {
        "php":"^8.0",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3",
        "symfony/filesystem": "^6.3"
    },
    
    "bin": ["bin/php-package-builder"],
    "license": "MIT",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16"
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix --ansi"
    }
}
